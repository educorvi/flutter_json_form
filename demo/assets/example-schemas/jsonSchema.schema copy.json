{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Miscellaneous Examples",
    "type": "object",
    "properties": {
        "basic": {
            "title": "Person",
            "type": "object",
            "properties": {
                "firstName": {
                    "type": "string",
                    "description": "The person's first name."
                },
                "lastName": {
                    "type": "string",
                    "description": "The person's last name."
                },
                "age": {
                    "description": "Age in years which must be equal to or greater than zero.",
                    "type": "integer",
                    "minimum": 0
                }
            }
        },
        "arrayOfThings": {
            "description": "Arrays of strings and objects",
            "title": "Arrays",
            "type": "object",
            "properties": {
                "fruits": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "vegetables": {
                    "type": "array",
                    "items": {
                        "$ref": "#/properties/arrayOfThings/$defs/veggie"
                    }
                }
            },
            "$defs": {
                "veggie": {
                    "type": "object",
                    "required": [
                        "veggieName",
                        "veggieLike"
                    ],
                    "properties": {
                        "veggieName": {
                            "type": "string",
                            "description": "The name of the vegetable."
                        },
                        "veggieLike": {
                            "type": "boolean",
                            "description": "Do I like this vegetable?"
                        }
                    }
                }
            }
        },
        "enumeratedValues": {
            "title": "Enumerated Values",
            "type": "object",
            "properties": {
                "data": {
                    "enum": [
                        42,
                        true,
                        "hello",
                        null,
                        [
                            1,
                            2,
                            3
                        ]
                    ]
                }
            }
        },
        "regularExpressionPattern": {
            "title": "Regular Expression Pattern",
            "type": "object",
            "properties": {
                "code": {
                    "type": "string",
                    "pattern": "^[A-Z]{3}-\\d{3}$"
                }
            }
        },
        "complexObjectWithNestedProperties": {
            "title": "Complex Object",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "age": {
                    "type": "integer",
                    "minimum": 0
                },
                "address": {
                    "type": "object",
                    "properties": {
                        "street": {
                            "type": "string"
                        },
                        "city": {
                            "type": "string"
                        },
                        "state": {
                            "type": "string"
                        },
                        "postalCode": {
                            "type": "string",
                            "pattern": "\\d{5}"
                        }
                    },
                    "required": [
                        "street",
                        "city",
                        "state",
                        "postalCode"
                    ]
                },
                "hobbies": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "name",
                "age"
            ]
        },
        "conditionalValidationWithDependantRequired": {
            "title": "Conditional Validation with dependentRequired",
            "type": "object",
            "properties": {
                "foo": {
                    "type": "boolean"
                },
                "bar": {
                    "type": "string"
                }
            },
            "dependentRequired": {
                "foo": [
                    "bar"
                ]
            }
        },
        "conditionalValidationWithDependantSchemas": {
            "title": "Conditional Validation with dependentSchemas",
            "type": "object",
            "properties": {
                "foo": {
                    "type": "boolean"
                },
                "propertiesCount": {
                    "type": "integer",
                    "minimum": 0
                }
            },
            "dependentSchemas": {
                "foo": {
                    "required": [
                        "propertiesCount"
                    ],
                    "properties": {
                        "propertiesCount": {
                            "minimum": 7
                        }
                    }
                }
            }
        },
        "conditionalValidationWithIfElse": {
            "title": "Conditional Validation with If-Else",
            "type": "object",
            "properties": {
                "isMember": {
                    "type": "boolean"
                },
                "membershipNumber": {
                    "type": "string"
                }
            },
            "required": [
                "isMember"
            ],
            "if": {
                "properties": {
                    "isMember": {
                        "const": true
                    }
                }
            },
            "then": {
                "properties": {
                    "membershipNumber": {
                        "type": "string",
                        "minLength": 10,
                        "maxLength": 10
                    }
                }
            },
            "else": {
                "properties": {
                    "membershipNumber": {
                        "type": "string",
                        "minLength": 15
                    }
                }
            }
        }
    }
}
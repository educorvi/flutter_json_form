{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1
        },
        "email": {
            "type": "string"
        },
        "url": {
            "type": "string"
        },
        "tel": {
            "type": "string"
        },
        "color": {
            "type": "string"
        },
        "hidden": {
            "type": "string"
        },
        "password": {
            "type": "string"
        },
        "datetime-local": {
            "type": "string"
        },
        "autocomplete": {
            "type": "string"
        },
        "enum1": {
            "type": "string",
            "enum": [
                "value1",
                "value2",
                "value3",
                "value4"
            ]
        },
        "enumStacked": {
            "type": "string",
            "enum": [
                "value1",
                "value2",
                "value3",
                "value4"
            ]
        },
        "enumRadio": {
            "type": "string",
            "enum": [
                "value1",
                "value2",
                "value3",
                "value4"
            ]
        },
        "enumRadioStacked": {
            "type": "string",
            "enum": [
                "value1",
                "value2",
                "value3",
                "value4"
            ]
        },
        "enumSwitches": {
            "type": "string",
            "enum": [
                "value1",
                "value2",
                "value3",
                "value4"
            ]
        },
        "enumButtons": {
            "type": "string",
            "enum": [
                "value1",
                "value2",
                "value3",
                "value4"
            ]
        },
        "title": {
            "type": "string",
            "enum": [
                "Mrs.",
                "Mr.",
                "Ms.",
                "Dr."
            ]
        },
        "description": {
            "type": "string",
            "default": "This good text was set as default"
        },
        "done": {
            "type": "boolean",
            "title": "Great Switch",
            "description": "Please press"
        },
        "fileupload": {
            "type": "string",
            "format": "uri"
        },
        "group_selector": {
            "title": "Groups or Object?",
            "type": "string",
            "enum": [
                "Groups",
                "Object"
            ],
            "default": "Groups"
        },
        "due_date": {
            "type": "string",
            "format": "date-time"
        },
        "rating": {
            "title": "Rating",
            "description": "Please rate us",
            "type": "integer",
            "maximum": 5,
            "minimum": 0,
            "step": 1,
            "default": 3
        },
        "weekdays": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "Monday",
                    "Tuesday",
                    "Wednesday",
                    "Thursday",
                    "Friday",
                    "Saturday",
                    "Sunday"
                ]
            }
        },
        "recurrence_interval": {
            "title": "Week Interval",
            "type": "integer"
        },
        "testArray": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 2,
            "maxItems": 4,
            "description": "This array requires 2 to 4 entries"
        },
        "testObject": {
            "type": "object",
            "title": "Pet",
            "properties": {
                "petName": {
                    "type": "string",
                    "description": "Give me a name"
                },
                "age": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 100,
                    "default": 10
                },
                "flauschig": {
                    "type": "boolean"
                }
            },
            "required": [
                "petName",
                "flauschig"
            ]
        },
        "fanciness": {
            "type": "string",
            "enum": [
                "fancy",
                "fancier",
                "fanciest",
                "unicorn"
            ],
            "description": "Select how fancy you are"
        },
        "tags": {
            "title": "Tag this form",
            "type": "array"
        },
        "tags2": {
            "title": "Tag this form 2",
            "type": "array"
        },
        "hiddenDateTime": {
            "type": "string",
            "format": "date-time",
            "default": "$now"
        },
        "hiddenDate": {
            "type": "string",
            "format": "date",
            "default": "$now"
        },
        "hiddenTime": {
            "type": "string",
            "format": "time",
            "default": "$now"
        }
    },
    "required": [
        "done",
        "name",
        "fanciness"
    ]
}
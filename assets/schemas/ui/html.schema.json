{
    "title": "HTML Renderer",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "html.schema.json",
    "type": "object",
    "description": "Some HTML to be rendered in the form",
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "HTML"
            ]
        },
        "htmlData": {
            "type": "string"
        },
        "showOn": {
            "$ref": "show_on.schema.json"
        }
    },
    "additionalProperties": false,
    "required": [
        "htmlData"
    ]
}
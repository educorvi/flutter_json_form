{
  "title": "Wizard",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "wizard.schema.json",
  "type": "object",
  "description": "A wizard that contains the form spread over multiple pages",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["Wizard"]
    },
    "pages": {
      "type": "array",
      "title": "Pages",
      "items": {
        "$ref": "wizard_page.schema.json"
      }
    },
    "$schema": {
      "type": "string",
      "description": "May contain a schema reference to the uischema"
    },
    "showOn": {
      "$ref": "show_on.schema.json"
    }
  },
  "additionalProperties": false,
  "required": ["type", "pages"]
}

                                  "secondary",
                                  "success",
                                  "warning",
                                  "danger",
                                  "info",
                                  "light",
                                  "dark",
                                  "outline-primary",
                                  "outline-secondary",
                                  "outline-success",
                                  "outline-warning",
                                  "outline-danger",
                                  "outline-info",
                                  "outline-light",
                                  "outline-dark"
                                ]
                              }
                            }
                          }
                        ]
                      }
                    ]

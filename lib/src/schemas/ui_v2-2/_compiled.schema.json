                    "type": "object",
                    "additionalProperties": false,
                    "description": "Options for text fields",
                    "properties": {
                      "format": {
                        "description": "Format for string fields",
                        "type": "string",
                        "enum": [
                          "text",
                          "time",
                          "date",
                          "datetime-local",
                          "email",
                          "password",
                          "search",
                          "url",
                          "tel",
                          "color",
                          "hidden"
                        ],
                        "default": "text"
                      },
                      "multi": {
                        "oneOf": [
                          {
                            "type": "boolean"
                          },
                          {
                            "type": "integer"
                          }
